# $Header: $

depend() {
	need rsyslog
}

start() {
	/etc/init.d/sympa start
}

stop() {
	/etc/init.d/sympa stop
}

start_pre() {
	/home/sympa/bin/sympa.pl --health_check
	ebegin "Starting sympa"
}
